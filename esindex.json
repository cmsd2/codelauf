{
    "settings" : {
        "number_of_shards" : 1
    },
    "mappings" : {
        "commit" : {
            "_source" : { "enabled" : true },
            "properties" : {
		"parents": {
		    "properties": {
			"id": {
			    "type": "string",
			    "index": "not_analyzed"
			}
		    }
		},
		"repo_id": {
		    "type": "string",
		    "index": "not_analyzed"
		},
		"author": {
		    "properties": {
			"name": {
			    "type": "string",
			    "index": "not_analyzed"
			},
			"email": {
			    "type": "string",
			    "index": "not_analyzed"
			}
		    }
		},
		"committer": {
		    "properties": {
			"name": {
			    "type": "string",
			    "index": "not_analyzed"
			},
			"email": {
			    "type": "string",
			    "index": "not_analyzed"
			}
		    }
		},
		"commit_date": {
		    "type": "date"
		},
		"message": {
		    "type": "string"
		},
		"files": {
		    "properties": {
			"change_type": {
			    "type": "string",
			    "index": "not_analyzed"
			},
			"path": {
			    "type": "string",
			    "index": "not_analyzed"
			},
			"text": {
			    "type": "string"
			},
			"keywords": {
			    "type": "string"
			}
		    }
		}
            }
        },

	"file": {
	    "_source": { "enabled": true },
	    "properties": {
		"path": {
		    "type": "string"
		},
		"repo_id": {
		    "type": "string",
		    "index": "not_analyzed"
		},
		"changed_commit_id": {
		    "type": "string",
		    "index": "not_analyzed"
		},
		"changed_date": {
		    "type": "date"
		},
		"text": {
		    "type": "string"
		},
		"keywords": {
		    "type": "string"
		}
	    }
	}
    }
}
